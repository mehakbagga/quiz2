<div>
  <div>
    <%= form_tag(sessions_path, method: :post) do %>
      <div>
        <%= label_tag :email %>
        <%= email_field_tag :email %>
      </div>
      <div>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>
      <%= submit_tag "Log In" %>
    <% end %>
  </div>
</div>